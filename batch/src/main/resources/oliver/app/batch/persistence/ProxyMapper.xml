<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="oliver.app.batch.persistence.ProxyMapper">

    <cache/>

    <sql id="proxyFullColumn">
        id,status,type,ip,port,username,password,add_time as addTime,update_time as updateTime,speed,note
    </sql>

    <resultMap id="proxyResultMap" type="Proxy" autoMapping="true">
        <association property="addTime" column="add_time"/>
        <association property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getById" resultType="Proxy" parameterType="int">
        SELECT
        <include refid="proxyFullColumn"></include>
        from proxy where id=#{id}
    </select>

    <select id="findByIp" resultType="Proxy" parameterType="string">
        SELECT
        <include refid="proxyFullColumn"/>
        from proxy where inet_ntoa(ip)=#{ip}

    </select>

    <insert id="insert" parameterType="oliver.app.batch.domain.Proxy">
        INSERT INTO proxy
        (status,ip,port,type,username,password,add_time,update_time,speed,note)
        VALUES
        (#{status},inet_aton(#{ip}),#{port},#{type},#{username},#{password},#{addTime},#{updateTime},#{speed},#{note})
    </insert>

</mapper>